    <!-- ⚡ 아카리의 완벽한 JavaScript! -->
    <script>
        // 스무스 스크롤 마법 ✨
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // 헤더 변신 마법 🎭
        window.addEventListener('scroll', function() {
            const mainTitle = document.getElementById('main-title');
            const scrollNav = document.getElementById('scroll-nav');
            const startingQuestionSection = document.getElementById('starting-question');
            
            if (!mainTitle || !scrollNav || !startingQuestionSection) return;
            
            const scrollPosition = window.scrollY;
            const startingQuestionTop = startingQuestionSection.offsetTop;
            
            // 질문 섹션에 도달했을 때 헤더 변신!
            if (scrollPosition >= (startingQuestionTop - 100)) {
                mainTitle.style.display = 'none';
                scrollNav.style.display = 'flex';
                scrollNav.classList.remove('hidden');
            } else {
                mainTitle.style.display = 'flex';
                scrollNav.style.display = 'none';
                scrollNav.classList.add('hidden');
            }
        });
    </script>
</body>
</html>
